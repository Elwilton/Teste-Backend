@model SistemaLoja.Application.DTOs.PedidoDto

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<h2>Detalhes do Pedido #@Model.Id</h2>

<p><strong>Data:</strong> @Model.DataPedido.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Status:</strong> @Model.Status</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Preço Unitário</th>
            <th>Quantidade</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Itens == null || !Model.Itens.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum item neste pedido.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Itens)
            {
                <tr>
                    <td>@item.NomeProduto</td>
                    <td>@item.PrecoUnitario.ToString("C")</td>
                    <td>@item.Quantidade</td>
                    <td>@item.ValorTotal.ToString("C")</td>
                </tr>
            }
        }
    </tbody>
</table>

<h4>Total: @Model.ValorTotal.ToString("C")</h4>

<a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
