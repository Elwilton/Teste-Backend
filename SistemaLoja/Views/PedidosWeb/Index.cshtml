@model IEnumerable<SistemaLoja.Application.DTOs.PedidoDto>

@{
    ViewData["Title"] = "Pedidos";
}

<h2 class="mt-3">Pedidos</h2>
<a asp-action="Create" class="btn btn-success mb-3">Novo Pedido</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Status</th>
            <th>Valor Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Nenhum pedido cadastrado.</td>
            </tr>
        }
        else
        {
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.DataPedido.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@pedido.Status</td>
                    <td>@pedido.ValorTotal.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@pedido.Id" class="btn btn-info btn-sm">Detalhes</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
