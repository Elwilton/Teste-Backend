@model SistemaLoja.Application.DTOs.AtualizarProdutoDto

@{
    ViewData["Title"] = "Editar Produto";
}

<h2 class="mt-3 mb-4">Editar Produto</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Campo oculto para enviar o Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label fw-semibold"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descricao" class="form-label fw-semibold"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3" placeholder="Informe uma breve descrição"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Preco" class="form-label fw-semibold"></label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" placeholder="0,00" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            ← Voltar
        </a>
        <button type="submit" class="btn btn-primary px-4">
            💾 Atualizar
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
